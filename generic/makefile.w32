# produce pdos.exe
# Links against pdosgeno.a built with makefile.pgo

CC=gcc386
CFLAGS=-O2
LD=ld386
LDFLAGS=
AS=as386
AR=ar386
COPTS=-S $(CFLAGS) -fno-common -fno-builtin -ansi \
    -I. -I../bios -I../pdpclib -I../src \
    -U__WIN32__ -D__PDOS386__ -DNOLIBALLOC -D__NOBIVA__ -DNEED_AOUT \
    -DUSE_MEMMGR

all: clean pdos.exe

pdos.exe: genstart.o pdos.o ../bios/exeload.o ../src/fat.o
    $(LD) $(LDFLAGS) -s -N -e ___crt0 -o pdos.exe genstart.o pdos.o ../bios/exeload.o ../src/fat.o ../pdpclib/pdosgeno.a

.c.o:
    $(CC) $(COPTS) -o $*.s $<
    $(AS) -o $@ $*.s
    rm -f $*.s

clean:
    rm -f *.o pdos.exe
